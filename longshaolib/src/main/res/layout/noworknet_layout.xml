<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nonet_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_worknet" />

    <TextView
        android:id="@+id/nonet_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="网络断开了"
        android:textColor="#95BDFA"
        android:textSize="@dimen/textSize14" />

    <Button
        android:id="@+id/nonet_btn"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/group_margin"
        android:background="@drawable/pub_btn_gray_selector"
        android:gravity="center"
        android:text="重新加载"
        android:textColor="@color/fontcColor1"
        android:textSize="@dimen/textSize14"
        android:visibility="gone" />
</LinearLayout>