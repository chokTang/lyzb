<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:layout_centerInParent="true"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize14" />

            <View
                android:id="@+id/view_message"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignTop="@+id/tab_item_text"
                android:layout_toRightOf="@+id/tab_item_text"
                android:background="@drawable/shape_red_round"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/tab_item_indicator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/app_blue"
            android:visibility="invisible" />
    </LinearLayout>
</FrameLayout>