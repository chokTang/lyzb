<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_invoice_info_checkbox_wrapperRelativelayout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingLeft="20dp"
    android:background="@android:color/white"
    >

    <ImageView android:id="@+id/image_checkbox"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/image_checkbox_selector"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/fragment_invoice_info_checkbox_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:text="@string/placeholderTitle"
        android:textSize="@dimen/fontThree"
        android:textColor="@color/colorTwo"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/image_checkbox"
        android:layout_toEndOf="@+id/image_checkbox"
        android:layout_marginLeft="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/colorEight"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>