<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/colorTen"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabHeight"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/level_one_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:gravity="center"
            android:textColor="@drawable/tab_text_selector_two"
            android:textSize="@dimen/fontTwo"
            />

        <TextView
            android:id="@+id/level_two_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:gravity="center"
            android:textColor="@drawable/tab_text_selector_two"
            android:textSize="@dimen/fontTwo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/level_three_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_selector"
            android:gravity="center"
            android:textColor="@drawable/tab_text_selector_two"
            android:textSize="@dimen/fontTwo"
            android:visibility="gone"/>

    </LinearLayout>

    <com.szy.common.View.CommonRecyclerView
        android:id="@+id/fragment_distrib_team_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTen"
        android:divider="@null"
        android:layout_marginTop="10dp"
        app:emptyImage="@mipmap/bg_public"
        app:emptyTitle="@string/emptyData"
        />

</LinearLayout>
