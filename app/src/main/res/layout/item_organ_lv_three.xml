<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="40dp">


    <ImageView
        android:id="@+id/organ_lvthree_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/color_dedede" />

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:id="@+id/organ_lvthree_line2_ll"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/color_dedede" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:background="@color/color_dedede" />

            <ImageView
                android:id="@+id/organ_lvthree_line2"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/color_dedede" />
        </LinearLayout>

        <ImageView
            android:layout_width="7dp"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/organ_lvthree_line2_ll"
            android:background="@color/color_dedede" />
    </RelativeLayout>

    <ImageView
        android:layout_width="3dp"
        android:layout_height="1dp"
        android:background="@color/color_dedede" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="7dp"
        android:src="@drawable/ov_dedede_w1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/organ_lvthree_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize14"
            tools:text="这是机构名称" />

        <TextView
            android:id="@+id/organ_lvthree_look_lower_level_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_round_gray_line"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:text="查看下级"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize12"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>