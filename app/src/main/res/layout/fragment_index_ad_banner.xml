<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="120dp">
    <!--android:background="@drawable/fragment_index_item_background"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.szy.yishopcustomer.View.HeadViewPager
            android:id="@+id/fragment_index_banner_viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_banner0_my_ingots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_home_my_ingots"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="23dp"
        android:paddingTop="8dp"
        android:text="我的元宝:23"
        android:textColor="@color/ads_white"
        android:textSize="14dp" />

    <com.szy.yishopcustomer.View.CirclePageIndicator
        android:id="@+id/fragment_index_banner_pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        app:fillColor="#fc4955"
        app:paddingStart="5dp"
        app:pageColor="#88f4f7fc"
        app:radius="3dp"
        app:strokeColor="#88d5dae2"
        app:strokeWidth="0dp" />
</RelativeLayout>
