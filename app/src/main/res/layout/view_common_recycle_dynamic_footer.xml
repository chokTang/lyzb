<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_scan_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="2310人浏览"
        android:textColor="@color/fontcColor3"
        android:textSize="@dimen/textSize12" />

    <LinearLayout
        android:id="@+id/layout_zan_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zan_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/selector_zan"
            android:drawablePadding="5dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="728"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/union_message" />

        <TextView
            android:id="@+id/tv_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawablePadding="@dimen/text_icon_space"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="728"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_share_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/union_share" />

        <TextView
            android:id="@+id/tv_share_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:drawablePadding="@dimen/text_icon_space"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:text="分享"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize12" />
    </LinearLayout>
</LinearLayout>