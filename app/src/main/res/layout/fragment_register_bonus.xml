<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


    <ImageView
        android:id="@+id/check_bonus_button"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@mipmap/bg_bonus"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/register_bonus_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100元红包"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontOne"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/check_bonus_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/register_bonus_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恭喜您！获得10张总价值为"
        android:textColor="@color/colorTwo"
        android:textSize="@dimen/fontThree"
        android:layout_marginTop="90dp"
        android:layout_alignTop="@+id/check_bonus_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/register_bonus_value_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100元的红包"
        android:textColor="@color/colorTwo"
        android:textSize="@dimen/fontThree"
        android:layout_marginTop="110dp"
        android:layout_alignTop="@+id/check_bonus_button"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/close_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/btn_close_white"
        android:layout_below="@+id/check_bonus_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
