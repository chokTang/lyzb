<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTen"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/item_category_imageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@mipmap/pl_image"/>

    <TextView
        android:id="@+id/item_category_textView"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/enable_button"
        android:gravity="center"
        android:text="@string/enter_category"
        android:textColor="@android:color/white"
        android:textSize="@dimen/fontThree"/>
</LinearLayout>