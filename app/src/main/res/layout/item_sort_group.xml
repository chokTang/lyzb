<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/rale_sort_group_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/aliwx_white">

    <LinearLayout
        android:id="@+id/lin_sort_group_shop_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_sort_group_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:src="@mipmap/ic_shop_seller"/>

        <TextView
            android:id="@+id/tv_sort_group_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/img_sort_group_icon"
            android:textColor="@color/ingot_detail_text"
            android:textSize="12dp"
            tools:text="流浪地图餐厅"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_sort_group_good_img"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/lin_sort_group_shop_info"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_sort_group_good_img"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_sort_group_good_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sort_group_good_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="10"
            android:textColor="@color/aliwx_black"
            android:textSize="14dp"
            tools:text="中餐2-3人餐厅"/>

        <TextView
            android:id="@+id/tv_sort_group_good_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="16"
            android:textSize="12dp"
            tools:text="双人自选套餐双人自选套餐双人自选套餐"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sort_group_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ingot_usable_buy_bg"
                android:textSize="14dp"
                tools:text="￥55.00"/>

            <TextView
                android:id="@+id/tv_sort_group_marke_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textSize="12dp"
                tools:text="￥88"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_sort_group_dedu_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@mipmap/dedu_label"/>

            <TextView
                android:id="@+id/tv_sort_group_dedu_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_sort_group_dedu_img"
                android:textColor="@color/colorTwo"
                android:textSize="11dp"
                tools:text="元宝最高抵扣￥20"/>

            <TextView
                android:id="@+id/tv_sort_group_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="11dp"
                android:visibility="gone"
                tools:text="已售66"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sort_group_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:textSize="12dp"
        tools:text="102m"/>

</RelativeLayout>
