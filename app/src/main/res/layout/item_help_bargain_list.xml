<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/aliwx_white">

    <ImageView
        android:id="@+id/img_help_bargain_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_help_bargain_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_help_bargain_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="12"
            android:lines="1"
            tools:text="JBX13594306772JBX13594306772"/>

        <TextView
            android:id="@+id/tv_help_bargain_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="2018/10/11 11:14:56"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_help_bargain_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:textColor="#FFC600"
