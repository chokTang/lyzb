<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_10"
    android:paddingTop="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_margin"
        android:paddingRight="@dimen/app_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="栏目设置"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize16" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tab_show_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/app_margin"
            android:paddingRight="@dimen/app_margin"
            android:layout_marginTop="20dp">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/group_margin"
            android:text="温馨提示：你企业的所有内置账号名片的栏目设置，会与你的栏目设置保持一致，包括名称和是否隐藏。"
            android:textColor="@color/fontcColor3"
            android:textSize="@dimen/textSize12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/group_margin"
        android:background="@color/windows_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_layout_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/fontcColor3"
            android:textSize="@dimen/textSize16" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/windows_bg" />
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/textSize16" />
    </LinearLayout>
</LinearLayout>