<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white_f5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_un_card_info_edt_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/btn_back_dark"/>

        <TextView
            android:id="@+id/tv_un_card_info_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorOne"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tv_un_card_info_save"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="保存"
            android:textColor="#0079E5"/>

    </LinearLayout>

    <EditText
        android:id="@+id/edt_un_card_info_edt"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="12dp"
        android:background="@drawable/fg_un_card_info_edt"
        android:gravity="top"
        android:hint="请输入你的信息"
        android:padding="10dp"
        android:textColor="@color/colorOne"
        android:textSize="12sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_un_card_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

</LinearLayout>
