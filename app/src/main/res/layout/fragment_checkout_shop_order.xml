<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/linearlayout_total_price"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/top_border_three"
              android:orientation="vertical">


    <TextView
        android:id="@+id/textViewFullCutAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="立即￥200.00元"
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontFour"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="end"
        android:padding="10dp">

        <TextView
            android:id="@+id/fragment_checkout_shop_order_totalDeductibleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontFour"
            tools:text="元宝抵扣 ￥1"/>

        <TextView
            android:id="@+id/fragment_checkout_shop_order_labelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/labelShopTotalPrice"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontFour"/>

        <TextView
            android:id="@+id/fragment_checkout_shop_order_totalPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontSeven"
            tools:text="@string/placeholderTotalPrice"/>

    </LinearLayout>
</LinearLayout>