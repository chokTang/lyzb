<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_pay_payment_checkboxImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_margin="9dp"
        android:src="@mipmap/btn_review"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/fragment_pay_payment_checkboxImageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_pay_payment_payNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货到付款"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontTwo"/>

        <TextView
            android:id="@+id/fragment_tv_wxpay_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亿万用户的选择,更快更安全"
            android:textSize="11dp"
            android:visibility="gone"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_checkbox_pay_payment"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/adaptive_12dp"
        android:src="@drawable/image_checkbox_selector"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorEight"/>

</RelativeLayout>