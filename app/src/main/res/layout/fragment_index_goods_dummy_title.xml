<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_index_near_shop_title_wrapperBorderRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/fragment_index_item_background"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:gravity="start|center_vertical"
        android:text="@string/nearShop"
        android:textColor="#ffafed44"
        android:textSize="@dimen/fontOne"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="start|center_vertical"
        android:text="@string/more"
        android:textColor="@color/colorThree"
        android:textSize="@dimen/fontTwo"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/fragment_index_near_shop_title_moreImageView"
        android:layout_toStartOf="@+id/fragment_index_near_shop_title_moreImageView" />


    <ImageView
        android:id="@+id/fragment_index_near_shop_title_moreImageView"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/btn_right_arrow_circled"
        android:scaleType="fitCenter"
        />
</RelativeLayout>