<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/app_margin"
    android:paddingTop="@dimen/app_margin"
    android:paddingRight="@dimen/app_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_member_header"
                android:layout_width="@dimen/member_headerImg_big"
                android:layout_height="@dimen/member_headerImg_big"
                android:scaleType="fitXY"
                tools:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/img_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/union_vip" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize14"
                tools:text="张三" />

            <TextView
                android:id="@+id/tv_member_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/fontcColor3"
                android:textSize="@dimen/textSize12"
                tools:text="张三的内容" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineSize"
        android:layout_marginTop="4dp"
        android:background="@color/lineColor" />

    <TextView
        android:id="@+id/tv_register_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_layout_height"
        android:gravity="center_vertical"
        android:textColor="@color/fontcColor3"
        android:textSize="@dimen/textSize12"
        tools:text="注册时间：2019-02-02 12:00:00" />
</LinearLayout>