<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/item_scan_title"
    android:background="@drawable/top_border_one"
    >

    <ImageView
        android:id="@+id/item_scan_shop_icon_imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_shop"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/item_scan_shop_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/item_scan_shop_icon_imageView"
        android:layout_toRightOf="@+id/item_scan_shop_icon_imageView"
        android:text="店铺名称"
        android:textColor="@color/colorTwo"
        android:textSize="@dimen/fontTwo"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorEight"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>