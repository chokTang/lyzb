<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border_two"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/item_tab_title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.3dp"
        android:layout_marginLeft="10dp"
        android:background="#00000000"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:paddingBottom="13dp"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:text="@string/pl_category_name"
        android:textColor="@drawable/tab_text_selector_two"
        android:textSize="@dimen/fontFour" />

    <ImageView
        android:id="@+id/item_tab_title_image_view"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_tab_title_textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_sort_arrow_down"
        android:visibility="invisible" />

</RelativeLayout>