<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTen"
    android:orientation="vertical">

    <include layout="@layout/layout_title_no_right"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorThree"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="消费金额:"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:textColor="@color/ingot_detail_text"/>
        <EditText
            android:id="@+id/edt_consume_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/red"
            android:inputType="number|numberDecimal"
            android:textSize="14dp"
            android:hint="请咨询店员后填入"
            android:gravity="end|center_vertical"
            android:background="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="实付金额:"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:textColor="@color/ingot_detail_text"/>
        <TextView
            android:id="@+id/tv_consume_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingRight="5dp"
            android:textSize="14dp"
            android:textColor="@color/red"
            android:gravity="end|center_vertical"
            android:background="@color/white"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_confirm_pay_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_confirm_pay"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:text="确认买单"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="用元宝,花钱少"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:text="(买单仅限于到店支付)"/>
</LinearLayout>