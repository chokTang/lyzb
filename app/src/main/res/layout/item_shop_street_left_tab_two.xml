<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fragment_shop_street_border">

    <TextView
        android:id="@+id/item_tab_title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.3dp"
        android:background="#00000000"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:paddingBottom="13dp"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:text="@string/pl_category_name"
        android:textColor="@drawable/tab_text_selector_two"
        android:textSize="@dimen/fontFour" />

</RelativeLayout>