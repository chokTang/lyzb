<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/app_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_company_appl_head"
            android:layout_width="@dimen/member_headerImg_big"
            android:layout_height="@dimen/member_headerImg_big"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/adaptive_12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_company_appl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize14"
                tools:text="赵婷婷"/>

            <TextView
                android:id="@+id/tv_item_company_appl_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_line_space"
                android:text="重庆市礼仪之邦电子商务有限公司"
                android:textColor="@color/fontcColor3"
                android:textSize="@dimen/textSize12"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/line_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/app_margin">

        <TextView
            android:id="@+id/tv_item_company_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="2019-03-11 18:30:41"
            android:textColor="@color/fontcColor3"
            android:textSize="@dimen/textSize12"/>

        <TextView
            android:id="@+id/tv_item_company_states"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:text="已同意"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize14"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_item_company_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/adaptive_20dp"
            android:layout_toLeftOf="@+id/tv_item_company_agreed"
            android:background="@drawable/st_linecolor_r2"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:text="拒绝"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize14"/>

        <TextView
            android:id="@+id/tv_item_company_agreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/st_linecolor_r2"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:text="同意"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize14"/>
    </RelativeLayout>


</LinearLayout>
