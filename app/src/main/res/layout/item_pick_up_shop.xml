<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_order_list_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border_one"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <include layout="@layout/layout_checkbox" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pick_up_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="燕大门店"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontTwo" />

        <LinearLayout
            android:id="@+id/linearlayout_shop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/ic_location" />

            <TextView
                android:id="@+id/pick_up_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="地址"
                android:textColor="@color/colorThree"
                android:textSize="@dimen/fontFive" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_shop_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/ic_store_phone" />

            <TextView
                android:id="@+id/pick_up_shop_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="电话"
                android:textColor="@color/colorThree"
                android:textSize="@dimen/fontFive" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>