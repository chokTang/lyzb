<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/fragment_index_article_title_imageView"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@mipmap/pl_universal_image" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/fragment_index_article_articleViewPager"
            android:layout_toStartOf="@+id/fragment_index_article_articleViewPager"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorEight" />

        <com.szy.yishopcustomer.View.ArticleViewPager
            android:id="@+id/fragment_index_article_articleViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fragment_index_article_title_imageView"
            android:scrollbarFadeDuration="0" />

        <View
            android:id="@+id/fragment_index_article_viewPagerCoverView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fragment_index_article_articleViewPager"
            android:layout_alignLeft="@+id/fragment_index_article_articleViewPager"
            android:layout_alignRight="@+id/fragment_index_article_articleViewPager"
            android:layout_alignTop="@+id/fragment_index_article_articleViewPager"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/fragment_index_article_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/fragment_index_article_articleViewPager"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/fragment_index_article_articleViewPager"
            android:layout_alignTop="@+id/fragment_index_article_articleViewPager"
            android:layout_toRightOf="@+id/fragment_index_article_title_imageView"
            android:text="" />

    </RelativeLayout>

    <!--<include layout="@layout/item_border_one"/>-->
</LinearLayout>