<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_group_on_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/pl_image" />

        <ImageView
            android:id="@+id/item_group_on_soldout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/bg_sold_out"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/item_group_on_goods_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="iphone7这一刻更清晰"
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontThree" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_group_on_shop_imageView"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/tab_shop_home" />

        <TextView
            android:id="@+id/item_group_on_shop_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="zhaoyunlong"
            android:textColor="@color/colorThree"
            android:textSize="@dimen/fontFive"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_fight_group" />

        <TextView
            android:id="@+id/item_group_on_fight_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8人团"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontTwo" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="@color/colorEight"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/item_group_on_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="$20000"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontOne" />

        <TextView
            android:id="@+id/item_group_on_old_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="11"
            android:textColor="@color/colorThree"
            android:textSize="@dimen/fontSix"
            android:layout_weight="1"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/item_group_on_go_group_on"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/enable_button"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="去开团 >"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fontThree" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorSeven" />

</LinearLayout>