<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windows_bg"
    android:orientation="vertical"
    android:padding="10dp"
    app:divider="@drawable/listdivider_window_10"
    app:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_goods"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/text_line_space"
                android:text="商品名字"
                android:textColor="@color/fontcColor2"
                android:textSize="@dimen/textSize14" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:lineSpacingExtra="@dimen/text_line_space"
                android:text="￥99+5元宝"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_buy_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/shape_gray_white_bg"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="购买"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize14" />
    </LinearLayout>

    <include layout="@layout/recycle_account_dynamic_bottom" />

</android.support.v7.widget.LinearLayoutCompat>