<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="beforeDescendants"
    android:padding="@dimen/app_margin">

    <LinearLayout
        android:id="@+id/lin_item_un_me_pub_reply_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_un_pub_reply_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_un_pub_reply_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/union_vip"
                android:drawablePadding="@dimen/text_icon_space"
                android:lines="1"
                android:ellipsize="end"
                android:maxEms="15"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize14"
                tools:text="赵婷婷" />

            <TextView
                android:id="@+id/tv_un_pub_reply_commpany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_line_space"
                android:lineSpacingExtra="@dimen/text_line_space"
                android:maxLines="2"
                android:textColor="@color/fontcColor3"
                android:textSize="@dimen/textSize12"
                tools:text="重庆市礼仪之邦电子商务有限公司重庆市礼仪之邦电子商务有限公司" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_un_pub_reply_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/fontcColor3"
        android:textSize="@dimen/textSize12"
        tools:text="XX分钟前" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_un_me_pub_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_item_un_me_pub_reply_top"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/app_margin" />

    <TextView
        android:id="@+id/tv_un_pub_reply_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recy_un_me_pub_reply"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="@dimen/app_margin"
        android:background="@drawable/union_me_pub_rep_bg"
        android:lineSpacingExtra="@dimen/text_line_space"
        android:padding="@dimen/app_margin"
        android:textColor="@color/fontcColor1"
        android:textSize="@dimen/textSize14"
        tools:text="原动态:未来,5G将在自动驾驶,车路协助,娱乐,远程教育.远程医疗,以及智慧城市等多个方面有显著的作用和应用,以及智慧城市等多个方面有显著和应用" />

</RelativeLayout>
