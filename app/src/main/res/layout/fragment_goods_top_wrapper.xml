<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">

    <include
        android:id="@+id/fragment_index_goods_promotion_firstGoods"
        layout="@layout/fragment_goods_top_wrapper_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <include
        android:id="@+id/fragment_index_goods_promotion_secondGoods"
        layout="@layout/fragment_goods_top_wrapper_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <include
        android:id="@+id/fragment_index_goods_promotion_thirdGoods"
        layout="@layout/fragment_goods_top_wrapper_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>