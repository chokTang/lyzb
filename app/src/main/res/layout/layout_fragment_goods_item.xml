<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/fragment_goods_normal_info_layout"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_goods_rank_price_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bottom_border_three"
        android:orientation="horizontal"
       android:visibility="gone">

        <TextView
            android:id="@+id/fragment_goods_rank_price_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/userRankPrice"
            android:textColor="@color/colorGoodsDesc"
            android:textSize="@dimen/fontThree" />

        <ImageView
            android:id="@+id/fragment_goods_rank_price_indicatorImageView"
            android:layout_width="15dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_right_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_goods_gift_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bottom_border_three"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/fragment_goods_gift_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/gift"
            android:textColor="@color/colorGoodsDesc"
            android:textSize="@dimen/fontThree" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_goods_gift_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_goods_step_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border_three"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:visibility="gone"></LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_goods_bonus_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bottom_border_three"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/bonus"
            android:textColor="@color/colorGoodsDesc"
            android:textSize="@dimen/fontThree" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@string/clickToReceive"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontThree" />

        <ImageView
            android:id="@+id/fragment_goods_bonus_indicatorImageView"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_right_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_promotion_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border_three"
        android:minHeight="48dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="促销"
            android:textColor="@color/colorGoodsDesc"
            android:textSize="@dimen/fontThree"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="top|left"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:text="@string/clickToReceive"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontThree"
            >

            <LinearLayout
                android:id="@+id/ll_member_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/red_border_button_four"
                    android:paddingBottom="1dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/fontSix"
                    android:text="会员特价"
                    />

                <TextView
                    android:id="@+id/tv_member_price_message"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:text="@string/clickToReceive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorOne"
                    android:textSize="@dimen/fontFour"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/fragment_goods_mix_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/red_border_button_four"
                    android:paddingBottom="1dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/fontSix"
                    android:text="搭配套餐"
                    />

                <TextView
                    android:id="@+id/fragment_goods_mix_textView"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:text="@string/clickToReceive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorOne"
                    android:textSize="@dimen/fontFour"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_full_cut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                >

                <TextView
                    android:id="@+id/tv_reduce_cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/red_border_button_four"
                    android:paddingBottom="1dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/fontSix"
                    android:text="满减"
/>

                <TextView
                    android:id="@+id/tv_freight_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/red_border_button_four"
                    android:paddingBottom="1dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="包邮"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/fontSix" />

                <TextView
                    android:id="@+id/tv_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_border_button_four"
                    android:paddingBottom="1dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="赠"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/fontSix" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_gravity="top"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_right_arrow"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/fragment_goods_spec_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/top_bottom_border_one"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_goods_spec_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/have_selected"
            android:textColor="@color/colorGoodsDesc"
            android:textSize="@dimen/fontThree" />

        <TextView
            android:id="@+id/fragment_goods_spec_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontThree" />

        <ImageView
            android:id="@+id/fragment_goods_spec_indicatorImageView"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_right_arrow" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorTen" />

    <RelativeLayout
        android:id="@+id/fragment_goods_region_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bottom_border_one"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/fragment_goods_region_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/delivery_to"
            android:textColor="@color/colorGoodsDesc"
            android:textSize="@dimen/fontThree" />

        <ImageView
            android:id="@+id/ic_location_dark"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/fragment_goods_region_title"
            android:src="@mipmap/ic_location_dark" />

        <TextView
            android:id="@+id/fragment_goods_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ic_location_dark"
            android:layout_weight="1"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontThree" />

        <ImageView
            android:id="@+id/fragment_goods_region_indicatorImageView"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_right_arrow" />


        <TextView
            android:id="@+id/fragment_goods_freight_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ic_location_dark"
            android:layout_below="@+id/fragment_goods_region_title"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontThree" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fragment_goods_pick_uplayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bottom_border_three"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_goods_pick_up_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="start|center_vertical"
            android:text="@string/pickUp"
            android:textColor="@color/colorGoodsDesc"
            android:textSize="@dimen/fontThree" />

        <ImageView
            android:id="@+id/ic_location_dark_two"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_location_dark" />

        <TextView
            android:id="@+id/fragment_goods_pick_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="上门自提"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontThree" />


        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/btn_right_arrow" />
    </LinearLayout>

    <include
        android:id="@+id/fragment_goods_groupon_detail"
        layout="@layout/fragment_goods_groupon_detail_rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <include
        android:id="@+id/fragment_goods_contract_list"
        layout="@layout/fragment_goods_contract_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <include
        android:id="@+id/fragment_goods_bargain_item"
        layout="@layout/fragment_goods_bargain_item"
        android:layout_marginTop="@dimen/adaptive_6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>