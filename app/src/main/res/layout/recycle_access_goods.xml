<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_goods_day"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_layout_height"
        android:background="@color/windows_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/app_margin"
        android:textColor="@color/fontcColor2"
        android:textSize="@dimen/textSize14"
        tools:text="4月8日" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/double_layout_height"
        android:paddingLeft="@dimen/app_margin"
        android:paddingRight="@dimen/app_margin">

        <TextView
            android:id="@+id/tv_total_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lineSpacingExtra="@dimen/text_line_space"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize14"
            tools:text="交易笔数\n2" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:lineSpacingExtra="@dimen/text_line_space"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize14"
            tools:text="合计金额\n￥99" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineSize"
        android:layout_marginLeft="@dimen/app_margin"
        android:background="@color/lineColor" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_goods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/app_margin"
        android:paddingRight="@dimen/app_margin" />
</LinearLayout>