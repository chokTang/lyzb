<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <com.szy.yishopcustomer.View.FilterCheckBox
        android:id="@+id/fragment_filter_item_textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/fragment_filter_item_background_selector"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        custom:spacing="5dp"
        custom:ftextSize="@dimen/fontFive"
        custom:checkimg="@mipmap/ic_checklist"
        custom:ftext="@string/placeholderAttribute"
        custom:imageWidth="17dp"
        custom:ftextColor="@drawable/fragment_filter_item_text_color_selector"
        />

</LinearLayout>