<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/activity_shop_info_wrapper"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/activity_shop_logoImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/pl_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/activity_shop_logoImageView"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/activity_shop_logoImageView"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_shop_nameTextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/fontTwo" />

                    <RelativeLayout
                        android:id="@+id/activity_shop_followerWrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp">

                        <TextView
                            android:id="@+id/activity_shop_fans_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/fontTwo" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/activity_shop_fans_number"
                            android:layout_centerHorizontal="true"
                            android:text="@string/fansNumber"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/fontEight" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/activity_shop_followWrapper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:background="@drawable/activity_shop_title_text_view"
                        android:paddingLeft="8dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        >

                        <ImageView
                            android:id="@+id/activity_shop_followImageView"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/activity_shop_follow_image" />

                        <TextView
                            android:id="@+id/activity_shop_followTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/activity_shop_followImageView"
                            android:gravity="center"
                            android:layout_marginLeft="4dp"
                            android:text="@string/buttonFollow"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/fontThree" />
                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gray_border_shop_article"
                        android:paddingBottom="1dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="1dp"
                        android:gravity="center"
                        android:text="公告"
                        android:layout_marginBottom="1dp"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/fontSix"

                        />

                    <TextView
                        android:id="@+id/activity_shop_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:maxLines="1"
                        android:paddingRight="4dp"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/fontFour" />

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</merge>