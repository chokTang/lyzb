<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.szy.yishopcustomer.Fragment.UserCardFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@mipmap/ic_card_bg">

                    <ImageView
                        android:id="@+id/imageViewShopLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/logo" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="会员卡"
                            android:textSize="@dimen/fontThree"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fontThree"
                            android:text="Membership Card"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewCardNumber"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/background_circle_bottom"
                        android:gravity="center_vertical|right"
                        android:paddingRight="15dp"
                        android:text="No."
                        android:textSize="@dimen/fontFour"
                        android:textColor="@color/colorNine" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background_circle"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewPayBarcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/textViewPayBarcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/colorThree"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="@dimen/fontFive"
                        />

                    <ImageView
                        android:id="@+id/imageViewPayQrcode"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="使用时请向商城工作人员出示此码！"
                        android:textColor="@color/colorThree"
                        android:textSize="@dimen/fontFive"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textViewQuery"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/orange_border_button_one"
                android:gravity="center"
                android:text="会员信息查询"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fontTwo" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
