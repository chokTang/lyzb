<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border_one"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">
    <TextView
        android:id="@+id/order_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontFive"
        />
    <TextView
        android:id="@+id/add_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_sn"
        android:textColor="@color/colorThree"
        android:textSize="@dimen/fontFive"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/order_check_button"
        android:layout_toStartOf="@+id/order_check_button"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontTwo"
        />

    <TextView
        android:id="@+id/order_check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/enable_button"
        android:gravity="center"
        android:padding="7dp"
        android:text="@string/buttonGoToOrderList"
        android:textColor="@android:color/white"
        android:textSize="@dimen/fontFive"/>
</RelativeLayout>