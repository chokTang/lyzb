<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/img_confirm_order_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:src="@mipmap/btn_back_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确认订单"
                android:textColor="@color/ingot_detail_text"
                android:textSize="18dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorEight" />


        <TextView
            android:id="@+id/tv_order_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/icon_shop_logo"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="20"
            android:text="王蹄花"
            android:textColor="@color/ingot_detail_text"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorEight" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/img_order_detail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_order_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_order_detail"
                android:ellipsize="end"
                android:lines="1"
                android:maxLength="16"
                android:text="火锅超值8人套餐"
                android:textColor="@color/ingot_detail_text"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_order_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:maxLength="7"
                android:text="¥399"
                android:textColor="@color/ingot_detail_text"
                android:textSize="16dp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorEight" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量"
                android:textColor="@color/ingot_detail_text"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sub"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/selector_add_and_sub"
                    android:gravity="center"
                    android:text="－"
                    android:textColor="@color/c_black_white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLength="4"
                    android:maxWidth="40dp"
                    android:minWidth="20dp"
                    android:text="1"
                    android:textColor="@color/ingot_detail_text"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/selector_add_and_sub"
                    android:gravity="center"
                    android:text="＋"
                    android:textColor="@color/c_black_white"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorEight" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元宝实际抵扣"
                android:textColor="@color/ingot_detail_text"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_order_acer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="¥20"
                android:textColor="@color/red"
                android:textSize="16dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorEight" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小计"
                android:textColor="@color/ingot_detail_text"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_order_real_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="¥299"
                android:textColor="@color/red"
                android:textSize="16dp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorEight" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/ingot_detail_text"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edt_order_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_input"
                android:minWidth="100dp"
                android:maxWidth="200dp"
                android:inputType="number"
                android:paddingRight="20dp"
                android:lines="1"
                android:maxLength="11"
                android:ellipsize="end"
                android:textColor="@color/ingot_detail_text"
                android:background="@null"
                android:textSize="16dp" />
            <ImageView
                android:id="@+id/img_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_input"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_product_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp">


        <TextView
            android:id="@+id/tv_group_buy_detail_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_rmb"
            android:text="总计:¥56"
            android:textColor="@color/ingot_usable_number"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/tv_group_buy_send_acer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_group_buy_detail_new_price"
            android:text="支付送对应元宝"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_now_buy"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/ingot_usable_number"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/ads_white" />

    </RelativeLayout>

</RelativeLayout>