<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/app_margin">

    <TextView
        android:id="@+id/tv_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/text_line_space"
        android:textColor="@color/fontcColor1"
        android:textSize="@dimen/textSize18"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="文章的标题" />

    <TextView
        android:id="@+id/tv_article_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin"
        android:textColor="@color/fontcColor2"
        android:textSize="@dimen/textSize14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_article_title"
        tools:text="集宝箱" />

    <TextView
        android:id="@+id/tv_article_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="@dimen/app_margin"
        android:textColor="@color/fontcColor2"
        android:textSize="@dimen/textSize14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_article_from"
        app:layout_constraintLeft_toRightOf="@+id/tv_article_from"
        tools:text="2010年10月10日" />

    <TextView
        android:id="@+id/tv_article_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/app_margin"
        android:layout_marginBottom="@dimen/app_margin"
        android:lineSpacingExtra="@dimen/text_line_space"
        android:textColor="@color/fontcColor2"
        android:textSize="@dimen/textSize14"
        app:layout_constraintBottom_toTopOf="@+id/tv_read_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_article_from" />

    <TextView
        android:id="@+id/tv_read_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fontcColor2"
        android:textSize="@dimen/textSize14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="365人阅读" />

    <TextView
        android:id="@+id/tv_zan_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/union_zan"
        android:drawablePadding="@dimen/text_icon_space"
        android:gravity="center_vertical"
        android:textColor="@color/fontcColor2"
        android:textSize="@dimen/textSize14"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_read_number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="125" />

</android.support.constraint.ConstraintLayout>