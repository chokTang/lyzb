<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_msg_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官方客服"
            android:textSize="12dp"
            android:lines="1"
            android:textColor="#666666"/>

        <!--左边头像-->
        <com.szy.yishopcustomer.View.CircleImageView
            android:id="@+id/img_msg_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_msg_type"
            android:background="@mipmap/bg_default_avatar"/>


        <!--消息内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_msg_avatar"
            android:layout_alignTop="@+id/img_msg_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_msg_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_left_msg"
                android:text="官方客服官方客服是发的消息是是发的消息是,现在是测试消息不知道有多长得看看才知道官方客服是发的消息是,现在是测试消息不知道有多长得看看才知道" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>