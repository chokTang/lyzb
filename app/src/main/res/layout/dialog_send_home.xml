<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_white_r5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_send_cancel"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_send_tw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/text_icon_space"
            android:drawableTop="@mipmap/icon_send_tw"
            android:gravity="center"
            android:text="图文"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize14"/>

        <TextView
            android:id="@+id/tv_send_ps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/text_icon_space"
            android:drawableTop="@mipmap/icon_send_camara"
            android:gravity="center"
            android:text="拍摄"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize14"/>

        <TextView
            android:id="@+id/tv_send_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/text_icon_space"
            android:drawableTop="@mipmap/icon_send_video"
            android:gravity="center"
            android:text="视频"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize14"/>

        <TextView
            android:id="@+id/tv_send_active"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/text_icon_space"
            android:drawableTop="@mipmap/icon_send_active"
            android:gravity="center"
            android:text="活动"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize14"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_send_cancel"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_area_closed"/>
    </LinearLayout>
</LinearLayout>