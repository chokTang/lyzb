<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorTen"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/linearlayout_free_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="温馨提示：选择您想要分销的商品，上架后此商品将会在您的微店中展示！"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fontThree"/>

    </LinearLayout>

    <com.szy.common.View.CommonRecyclerView
        android:id="@+id/fragment_distrib_goods_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyImage="@mipmap/bg_public"
        app:emptyTitle="@string/emptyData"/>
</LinearLayout>