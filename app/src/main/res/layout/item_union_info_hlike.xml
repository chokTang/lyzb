<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_info_hobby_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/adaptive_6dp"
        android:background="@drawable/bg_business"
        android:paddingLeft="@dimen/adaptive_6dp"
        android:paddingRight="@dimen/adaptive_6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textColor="@color/fontcColor2"
        android:textSize="@dimen/textSize12"
        tools:text="人工智能"/>

    <ImageView
        android:id="@+id/img_info_hobby_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@mipmap/union_add_img_cancle"/>

</FrameLayout>
