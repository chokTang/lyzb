<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_circle_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_margin"
        android:background="@drawable/shape_round_bg"
        android:drawableLeft="@mipmap/circle_uanzhu"
        android:drawablePadding="@dimen/text_icon_space"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:paddingTop="2dp"
        android:paddingRight="8dp"
        android:paddingBottom="2dp"
        android:textColor="@color/fontcColor2"
        android:textSize="@dimen/textSize12"
        tools:text="小军干火锅圈子哦" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/img_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_header"
            android:layout_marginLeft="30dp"
            android:src="@drawable/union_vip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_header"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/icon_space_text"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_header_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="13"
                        android:maxLines="1"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize16"
                        tools:text="龙少龙少龙少龙少龙少龙龙少" />

                    <ImageView
                        android:id="@+id/img_voice_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_icon_space"
                        android:background="@drawable/voice_play_animal_red"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_header_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:text="重庆礼仪之邦电子商务科技有限公司"
                    android:textColor="@color/fontcColor3"
                    android:textSize="@dimen/textSize12" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_no_follow"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@drawable/shape_round_gray_line"
                android:drawableStart="@drawable/union_add_gray"
                android:drawableLeft="@drawable/union_add_gray"
                android:drawablePadding="@dimen/text_icon_space"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="关注"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize12"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_follow"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:background="@drawable/shape_round_gray_line"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="已关注"
                android:textColor="@color/fontcColor2"
                android:textSize="@dimen/textSize12"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>