<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border_one"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/item_back_detail_three_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textColor="@color/colorThree"
        android:textSize="@dimen/fontThree" />

    <TextView
        android:id="@+id/item_back_detail_three_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/item_back_detail_three_title"
        android:layout_toRightOf="@+id/item_back_detail_three_title"
        android:text=""
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontThree" />
</RelativeLayout>