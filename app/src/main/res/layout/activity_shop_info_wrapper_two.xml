<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_shop_info_wrapper_two"
    android:layout_width="match_parent"
    android:layout_height="280dp">

    <RelativeLayout
        android:id="@+id/relativeLayout9"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:background="@android:color/white"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_shop_imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:civ_border_color="#3fffffff"
        app:civ_border_width="4dp"
        app:civ_fill_color="#fff"/>

    <TextView
        android:id="@+id/activity_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_shop_imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="达芙妮"
        android:maxLines="1"
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontSeven"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_shop_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/activity_shop_collection"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/green_border_button_three"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@mipmap/btn_collection_green"/>

            <TextView
                android:id="@+id/textView_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="收藏"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/fontThree" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_shop_share_two"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/fragment_filter_item_background_selected_two"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@mipmap/btn_share_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="分享"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fontThree"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/dotted_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_dotted_line"
        android:layerType="software"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dotted_line"
        android:layout_alignStart="@+id/dotted_line"
        android:layout_below="@+id/dotted_line"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/gray_border_shop_article"
        android:paddingBottom="1dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="1dp"
        android:text="公告"
        android:textColor="@android:color/white"
        android:textSize="@dimen/fontFive"

        />

    <TextView
        android:id="@+id/activity_shop_detail1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="13dp"
        android:layout_toEndOf="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:gravity="center|left"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorTwo"
        android:textSize="@dimen/fontFour"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/textView7"
        android:background="@color/colorTen"/>
</RelativeLayout>