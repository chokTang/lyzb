<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="15dp"
    android:paddingRight="11dp"
    android:paddingTop="15dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/fragment_filter_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/placeholderTitle"
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontThree" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_filter_title_allTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all"
            android:textColor="@color/colorTwo"
            android:textSize="@dimen/fontThree" />

        <ImageView
            android:id="@+id/fragment_filter_title_allImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/bg_arrow_down_gray" />
    </LinearLayout>
</LinearLayout>