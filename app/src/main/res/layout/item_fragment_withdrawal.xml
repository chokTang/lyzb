<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/image_checkbox"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/fragment_withdrawal_btn_bg_seclect" />

    <TextView
        android:id="@+id/item_fragment_withdrawal_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@drawable/fragment_goodslist_btn_color_seclect" />

</LinearLayout>