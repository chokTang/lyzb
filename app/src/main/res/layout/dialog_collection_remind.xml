<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gray_white_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:paddingRight="@dimen/app_margin"
        android:paddingTop="@dimen/app_margin"
        android:src="@mipmap/btn_clear_content_circled" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="收藏成功"
        android:textColor="@color/fontcColor1"
        android:textSize="@dimen/textSize16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="收藏的动态会在我的-收藏里面哦"
        android:textColor="@color/fontcColor1"
        android:textSize="@dimen/textSize14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/union_collect_remind" />

    <include layout="@layout/line_layout" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_layout_height"
        android:gravity="center"
        android:text="知道了~"
        android:textColor="@color/fontcColor1"
        android:textSize="@dimen/textSize14" />
</LinearLayout>