<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="14dp"
    android:paddingTop="14dp"
    android:paddingRight="@dimen/app_margin"
    android:paddingLeft="@dimen/app_margin"
    app:divider="@drawable/listdivider_white_10"
    app:showDividers="middle">

    <TextView
        android:id="@+id/tv_campaign_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/fontcColor1"
        android:textSize="@dimen/textSize16"
        tools:text="利益至尊版电子是" />

    <ImageView
        android:id="@+id/img_campaign_poster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_marginTop="4dp"
        tools:background="@mipmap/seckill_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <include layout="@layout/view_three_header" />

        <TextView
            android:id="@+id/tv_campaign_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize12"
            tools:text="520人参与" />

        <TextView
            android:id="@+id/tv_campaign_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_weight="1"
            android:gravity="right"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize12"
            tools:text="线上活动" />

        <TextView
            android:id="@+id/tv_campaign_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/app_margin"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize12"
            tools:text="已结束" />
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>