<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rela_user_group_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F5F5F5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_user_group_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/btn_back_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="群聊资料"
            android:textColor="@color/colorOne"
            android:textSize="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_user_group_free"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rela_user_group_title"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="6dp"
            android:text="群消息免打扰"
            android:textColor="@color/colorOne"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/img_user_message_free"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="6dp"
            android:src="@mipmap/ic_scan_close"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_user_group_one"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@id/rela_user_group_free"
        android:background="#F5F5F5"/>

    <TextView
        android:id="@+id/tv_user_group_clear"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_user_group_one"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:text="清空聊天记录"
        android:textColor="#0e9ad4"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv_ext_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5"
        android:gravity="center"
        android:text="退出群聊"
        android:textColor="@color/colorOne"
        android:textSize="20dp"/>

</RelativeLayout>