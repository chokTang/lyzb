<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_border_two"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/fragment_select_address_poiTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontThree"
        android:text="秦皇岛"/>
    <TextView
        android:id="@+id/fragment_select_address_poiContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontFive"
        android:textColor="@color/colorThree"
        android:text="河北省秦皇岛市"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/fragment_select_address_poiTitle"/>
</RelativeLayout>
