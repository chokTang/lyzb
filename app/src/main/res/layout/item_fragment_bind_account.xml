<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/top_bottom_border_one"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/item_fragment_bind_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/item_fragment_bind_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gray_border_button_one"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="@string/delete"
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontFour" />

    <TextView
        android:id="@+id/item_fragment_bind_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_fragment_bind_image"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/item_fragment_bind_image"
        android:layout_toRightOf="@+id/item_fragment_bind_image"
        android:textColor="@color/colorTwo"
        android:textSize="@dimen/fontTwo" />

    <TextView
        android:id="@+id/item_fragment_bind_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_fragment_bind_name"
        android:layout_alignStart="@+id/item_fragment_bind_name"
        android:layout_centerVertical="true"
        android:textColor="@color/colorThree"
        android:textSize="@dimen/fontThree" />

    <TextView
        android:id="@+id/item_fragment_bind_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_fragment_bind_image"
        android:layout_alignLeft="@+id/item_fragment_bind_account"
        android:layout_alignStart="@+id/item_fragment_bind_account"
        android:layout_below="@+id/item_fragment_bind_delete"
        android:textColor="@color/colorThree"
        android:textSize="@dimen/fontThree" />
</RelativeLayout>