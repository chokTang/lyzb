<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/aliwx_white">

        <RadioGroup
            android:id="@+id/order_type_rg"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/takeout_order_rbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_order_list_tab_left_select"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="同城配送订单"
                android:textColor="@drawable/order_radiobt_text_color"/>

            <RadioButton
                android:id="@+id/group_order_rbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_order_list_tab_middle_select"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="团购订单"
                android:textColor="@drawable/order_radiobt_text_color"/>

            <RadioButton
                android:id="@+id/pay_order_rbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_order_list_tab_right_select"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="到店付订单"
                android:textColor="@drawable/order_radiobt_text_color"/>

        </RadioGroup>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine"/>


    <android.support.v7.widget.ContentFrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
