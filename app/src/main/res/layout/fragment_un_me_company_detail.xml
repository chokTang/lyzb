<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_union_me_com_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/btn_back_dark"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="XXX企业详情"
            android:textColor="@color/colorOne"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#0089ea"
            android:textSize="@dimen/adaptive_18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/adaptive_12dp"
        android:background="@drawable/union_me_menu"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/adaptive_12dp"
                android:text="企业名称"
                android:textColor="@color/colorOne"
                android:textSize="@dimen/adaptive_18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/adaptive_12dp"
                android:gravity="right|center"
                android:textSize="@dimen/adaptive_14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_f5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center|left"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/adaptive_12dp"
                android:text="企业类型"
                android:textColor="@color/colorOne"
                android:textSize="@dimen/adaptive_18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/adaptive_12dp"
                android:gravity="right|center"
                android:textSize="@dimen/adaptive_14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_f5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="@dimen/adaptive_12dp"
            android:gravity="center"
            android:text="企业简介"
            android:textColor="@color/colorOne"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="@dimen/adaptive_24dp"
            android:layout_marginLeft="@dimen/adaptive_12dp"
            android:layout_marginRight="@dimen/adaptive_12dp"
            android:background="@drawable/un_card_border_dash_line"
            android:gravity="top"
            android:padding="@dimen/adaptive_6dp"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/adaptive_14sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
