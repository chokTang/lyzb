<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    >

    <com.szy.yishopcustomer.View.CircleImageView
        android:id="@+id/imageView_user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@mipmap/pl_user_avatar"/>

    <TextView
        android:id="@+id/textView_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontThree"
        android:text=""
        android:textColor="@color/colorOne"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/imageView_user_photo"
        android:layout_toEndOf="@+id/imageView_user_photo"
        android:layout_alignTop="@+id/imageView_user_photo"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textView_reg_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTwo"
        android:text="2017/7/14"
        android:textSize="@dimen/fontFive"
        android:layout_alignBottom="@+id/imageView_user_photo"
        android:layout_toRightOf="@+id/imageView_user_photo"
        android:layout_toEndOf="@+id/imageView_user_photo"
        android:layout_marginRight="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorSeven"
        android:layout_below="@+id/imageView_user_photo"/>

</RelativeLayout>
