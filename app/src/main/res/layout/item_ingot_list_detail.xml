<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_ingot_detail_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="元宝调整"
        android:textColor="@color/ingot_detail_text"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/item_ingot_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_ingot_detail_dynamic"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:text="2018-04-12 12:20:22"
        android:textColor="@color/ingot_detail_time_text"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/item_ingot_detail_number_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_ingot_detail_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_ingot_detail_number_change"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:maxLength="20"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/ingot_detail_time_text"
        android:textSize="12sp"/>

</RelativeLayout>
