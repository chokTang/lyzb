<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:background="@color/white_f5"
        android:padding="@dimen/group_margin">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            tools:src="@drawable/ease_default_image" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/group_margin"
            android:layout_toRightOf="@+id/img_product"
            android:ellipsize="end"
            android:lines="1"
            android:text="贺东庄园桃红葡萄酒750ml"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/group_margin"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/img_product"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥188"
                android:textColor="@color/ingot_usable_number"
                android:textSize="@dimen/textSize14" />

            <TextView
                android:id="@+id/tv_acer"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="+29元宝"
                android:textColor="@color/ingot_usable_number"
                android:textSize="@dimen/textSize12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_product"
            android:layout_marginLeft="@dimen/group_margin"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_buy"
            android:layout_toRightOf="@+id/img_product"
            android:ellipsize="end"
            android:lines="1"
            android:text="宁夏贺东红酒旗舰店"
            android:textColor="@color/fontcColor3"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_product"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_red_background"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:paddingRight="8dp"
            android:paddingBottom="2dp"
            android:text="购买"
            android:textColor="@color/windows_bg"
            android:textSize="12sp" />

    </RelativeLayout>


</RelativeLayout>