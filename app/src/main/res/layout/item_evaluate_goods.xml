<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/item_evaluate_goods_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/pl_image"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/item_evaluate_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_evaluate_goods_image"
        android:layout_toEndOf="@+id/item_evaluate_goods_image"
        android:maxLines="2"
        android:layout_marginLeft="10dp"
        android:text="商品名称占位"
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontTwo"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/item_evaluate_goods_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品属性占位"
        android:textColor="@color/colorThree"
        android:textSize="@dimen/fontFour"
        android:layout_below="@+id/item_evaluate_goods_name"
        android:layout_alignLeft="@+id/item_evaluate_goods_name"
        android:layout_alignStart="@+id/item_evaluate_goods_name"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:id="@+id/item_evaluate_goods_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/item_evaluate_goods_image"
        android:background="@drawable/gray_border_button_two"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_pencil_red" />

    <TextView
        android:id="@+id/item_evaluate_goods_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:text="评价晒单"
        android:textColor="@android:color/holo_red_light"
        />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorEight"
        android:layout_below="@+id/item_evaluate_goods_button_layout"
        android:layout_marginTop="10dp"/>
</RelativeLayout>
