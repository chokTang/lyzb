<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">


    <ImageView
        android:id="@+id/img_ingots_buy_product_pic"
        android:layout_width="130dp"
        android:background="@mipmap/bg_zfx_default"
        android:layout_height="130dp" />

    <TextView
        android:id="@+id/tv_ingots_buy_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLength="6"
        android:text="黑猫瓜子"
        android:textStyle="bold"
        android:textColor="@color/ingot_detail_text"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ingots_buy_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥200"
            android:textStyle="bold"
            android:textColor="#f23030"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_ingots_buy_product_ingots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+12元宝"
            android:textColor="#f23030"
            android:textSize="12dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ingots_buy_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="6"
            android:text="黑猫毛家"
            android:textColor="@color/colorThree"
            android:textSize="12dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="11dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:background="@color/colorThree" />

        <TextView
            android:id="@+id/tv_ingots_buy_go_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进店"
            android:textColor="@color/colorTwo"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>