<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_layout_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/app_margin"
            android:text="数据预览"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/app_margin"
            android:paddingTop="@dimen/app_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/union_access_share"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计分享"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/app_margin"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_share_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/app_blue"
                        android:textSize="24sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="次"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_layout_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/app_margin"
            android:text="分享效果分析"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize14"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            app:divider="@drawable/listdivider"
            app:dividerPadding="70dp"
            app:showDividers="middle">

            <LinearLayout
                android:id="@+id/layout_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/double_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/app_margin"
                android:paddingRight="@dimen/app_margin">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/union_access_card"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="智能名片"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize14"/>

                    <TextView
                        android:id="@+id/tv_card_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="分享0次，被0人访问了0次"
                        android:textColor="@color/fontcColor2"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_dynamic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/double_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/app_margin"
                android:paddingRight="@dimen/app_margin">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/union_access_dynamic"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的动态"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize14"/>

                    <TextView
                        android:id="@+id/tv_dynamic_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="分享0次，被0人访问了0次"
                        android:textColor="@color/fontcColor2"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/double_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/app_margin"
                android:paddingRight="@dimen/app_margin">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/union_hot_label"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="热文"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize14"/>

                    <TextView
                        android:id="@+id/tv_hot_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="分享0次，被0人访问了0次"
                        android:textColor="@color/fontcColor2"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.LinearLayoutCompat>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/app_margin">

            <TextView
                android:id="@+id/btn_find_detail"
                style="@style/common_bottom_btn_style"
                android:text="查看访客明细"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>