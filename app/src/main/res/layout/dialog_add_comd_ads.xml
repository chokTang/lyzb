<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <EditText
        android:id="@+id/edt_comd_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/adaptive_6dp"
        android:background="@drawable/shape_gray_white_bg"
        android:gravity="top"
        android:hint="请输入地址信息"
        android:minHeight="@dimen/adaptive_66dp"
        android:padding="@dimen/adaptive_6dp"
        android:lineSpacingExtra="@dimen/text_line_space"
        android:textColor="@color/fontcColor1"
        android:textSize="@dimen/textSize14"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/adaptive_12dp"
        android:layout_marginLeft="@dimen/adaptive_6dp"
        android:layout_marginTop="@dimen/adaptive_6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_black_white_bg"
            android:paddingBottom="@dimen/adaptive_6dp"
            android:paddingLeft="@dimen/adaptive_24dp"
            android:paddingRight="@dimen/adaptive_24dp"
            android:paddingTop="@dimen/adaptive_6dp"
            android:text="取消"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize14"/>

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/adaptive_12dp"
            android:layout_marginRight="@dimen/adaptive_6dp"
            android:background="@drawable/shade_apply_bg"
            android:paddingBottom="@dimen/adaptive_6dp"
            android:paddingLeft="@dimen/adaptive_24dp"
            android:paddingRight="@dimen/adaptive_24dp"
            android:paddingTop="@dimen/adaptive_6dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14"/>
    </LinearLayout>
</LinearLayout>
