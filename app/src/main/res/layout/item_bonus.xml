<?xml version="1.0" encoding="utf-8"?>
<com.szy.yishopcustomer.View.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
                                               android:layout_width="match_parent"
                                               android:layout_height="110dp"
                                               android:layout_centerHorizontal="true"
                                               android:background="@color/colorTen"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/layout_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTen"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/padding_left"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorTen"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/bonus_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOne"
                    android:textSize="@dimen/fontTwo"/>

                <TextView
                    android:id="@+id/bonus_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="发行方：平台方"
                    android:textColor="@color/colorTwo"
                    android:textSize="@dimen/fontFour"/>

                <TextView
                    android:id="@+id/bonus_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限品类：商品分类"
                    android:textColor="@color/colorTwo"
                    android:textSize="@dimen/fontFour"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/dash_line"
                    android:layerType="software"/>

                <TextView
                    android:id="@+id/bonus_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效期2016/12/12"
                    android:textColor="@color/colorThree"
                    android:textSize="@dimen/fontFive"/>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/item_bonus_right_layout"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@color/colorNine"
                >

                <TextView
                    android:id="@+id/bonus_price_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"/>

                <TextView
                    android:id="@+id/bonus_use_button"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/white_circle_button"
                    android:gravity="center"
                    android:text="立即使用"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontFive"/>

                <ImageView
                    android:id="@+id/item_bonus_nearing_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/bonus_expiration"/>


            </RelativeLayout>

            <ImageView
                android:id="@+id/item_bonus_top_border_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/padding_right"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorTen"/>
        </LinearLayout>


    </RelativeLayout>
</com.szy.yishopcustomer.View.SlidingButtonView>
