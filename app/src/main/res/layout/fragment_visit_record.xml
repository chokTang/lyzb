<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2"
    android:orientation="vertical">

    <include layout="@layout/toolbar_statistics"/>

    <com.like.longshaolib.widget.AutoWidthTabLayout
        android:id="@+id/visit_record_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/fontcColor3"
        app:tabIndicatorHeight="1dp"
        app:tabSelectTextColor="@color/fontcColor1"
        app:tabSelectTextSize="16"
        app:tabTextColor="@color/fontcColor3"
        app:tabTextSize="16"
        app:tab_Mode="mode_fixed"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/visit_record_visit_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_margin"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@drawable/sl_white_r5"
                android:elevation="5dp"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/union_access"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/visit_record_visit_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/adaptive_5dp"
                            android:textColor="#00C29E"
                            android:textSize="30sp"
                            tools:text="22"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/adaptive_5dp"
                            android:text="次"
                            android:textColor="#00C29E"
                            android:textSize="20sp"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="访问次数"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="名片商城交易"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/visit_record_share_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/app_margin"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@drawable/sl_white_r5"
                android:elevation="5dp"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/union_access_share"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/visit_record_share_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/adaptive_5dp"
                            android:textColor="#B464F8"
                            android:textSize="30sp"
                            tools:text="22"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/adaptive_5dp"
                            android:text="次"
                            android:textColor="#B464F8"
                            android:textSize="20sp"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分享次数"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="名片商城交易"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/visit_record_newuser_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_white_r5"
                android:elevation="5dp"
                android:layout_marginTop="@dimen/app_margin"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/union_new_account"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/visit_record_newuser_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/adaptive_5dp"
                            android:textColor="#FF8000"
                            android:textSize="30sp"
                            tools:text="22"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/adaptive_5dp"
                            android:text="人"
                            android:textColor="#FF8000"
                            android:textSize="20sp"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="引流新用户"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="名片商城交易"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/visit_record_transaction_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sl_white_r5"
                android:elevation="5dp"
                android:paddingBottom="15dp"
                android:layout_marginTop="@dimen/app_margin"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/union_goods"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/visit_record_transaction_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/adaptive_5dp"
                            android:textColor="#33B5FF"
                            android:textSize="30sp"
                            tools:text="22"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/adaptive_5dp"
                            android:text="笔"
                            android:textColor="#33B5FF"
                            android:textSize="20sp"/>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名片商城交易"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>