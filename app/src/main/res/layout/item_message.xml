<?xml version="1.0" encoding="utf-8"?>
<com.szy.yishopcustomer.View.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_centerHorizontal="true"
    android:background="@color/colorTen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_layout"
            android:background="@color/colorCyan"
            android:gravity="center"
            android:text="@string/markAsRead"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignTop="@+id/message_layout"
            android:layout_alignBottom="@+id/message_layout"
            />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_mark"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@android:color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignTop="@+id/message_layout"
            android:layout_alignBottom="@+id/message_layout"/>

        <RelativeLayout
            android:id="@+id/message_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            >

            <TextView
                android:id="@+id/item_message_titleTextView"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/item_message_imageView"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/item_message_imageView"
                android:layout_toLeftOf="@+id/item_message_dateTextView"
                android:layout_toRightOf="@+id/item_message_imageView"
                android:layout_toStartOf="@+id/item_message_dateTextView"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/placeholderMessageTitle"
                android:textColor="@color/colorOne"
                android:textSize="@dimen/fontSeven" />

            <TextView
                android:id="@+id/item_message_contentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/item_message_titleTextView"
                android:layout_alignStart="@+id/item_message_titleTextView"
                android:layout_below="@+id/item_message_titleTextView"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorThree"
                android:textSize="@dimen/fontThree"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/item_message_dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/item_message_titleTextView"
                android:text="@string/placeholderMessageDate"
                android:textColor="@color/colorThree"
                android:textSize="@dimen/fontFive"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/item_message_status"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignTop="@+id/item_message_imageView"
                android:layout_alignRight="@+id/item_message_imageView"
                android:background="@drawable/activity_root_tab_cart_badge"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_message_imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/descriptionMessageIcon"
                android:scaleType="fitCenter"
                android:layout_marginLeft="10dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/colorEight"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="60dp"/>
        </RelativeLayout>

    </RelativeLayout>


</com.szy.yishopcustomer.View.SlidingButtonView>