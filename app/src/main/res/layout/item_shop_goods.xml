<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/goods_list_item_border"
    android:paddingBottom="10dp">

    <com.szy.common.View.SquareImageView
        android:id="@+id/item_shop_goods_goods_iamge_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/item_shop_goods_goods_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_shop_goods_goods_iamge_imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:lines="2"
        android:textColor="@color/colorOne" />

    <TextView
        android:id="@+id/item_shop_goods_goods_price_textView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_shop_goods_goods_name_textView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontThree" />

</RelativeLayout>
