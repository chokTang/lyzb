<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_bottom_border_one"
    android:orientation="vertical">

    <include
        layout="@layout/item_border_one"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <ImageView
            android:id="@+id/btn_shipped"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/ic_watch_dark" />

        <TextView
            android:id="@+id/fragment_order_detail_leftTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="还差11"
            android:textSize="@dimen/fontFour"
            android:layout_marginTop="-2dp"
            android:textColor="@color/colorGoodsDesc"/>
    </LinearLayout>


    <include
        layout="@layout/item_border_one"/>

</LinearLayout>