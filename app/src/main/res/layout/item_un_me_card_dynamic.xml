<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_un_me_card_dyc_head"
            android:layout_width="42dp"
            android:layout_height="42dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_un_me_card_dyc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/union_me_vip"
                android:textColor="#353535"
                android:textSize="@dimen/adaptive_18sp"
                tools:text="赵婷婷"/>

            <TextView
                android:id="@+id/tv_un_me_card_dyc_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="24"
                android:textSize="@dimen/adaptive_12sp"
                tools:text="重庆市礼仪之邦电子商务有限公司重庆市礼仪之邦电子商务有限公司"/>
        </LinearLayout>

        <ImageView
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/union_card_un_focus"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_un_me_card_dyc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/adaptive_10dp"
        android:layout_marginRight="@dimen/adaptive_10dp"
        android:layout_marginTop="2dp"
        android:lineSpacingExtra="@dimen/text_line_space"
        android:textColor="@color/fontcColor2"
        android:textSize="@dimen/textSize14"
        tools:text="百甲餐饮管理有限公司百甲餐饮管理有限公司百甲餐饮管理有限公司百甲餐饮管理有限公司百甲餐饮管理有限公司"/>

    <TextView
        android:id="@+id/tv_un_me_card_dyc_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/adaptive_10dp"
        android:layout_marginTop="2dp"
        android:textColor="#247cf0"
        tools:text="全文"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_un_me_card_dyc_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/adaptive_10dp"
        android:layout_marginRight="@dimen/adaptive_10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="4dp"
        android:background="@color/bg_ececec"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_un_me_card_dyc_browse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="2322人浏览"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_un_me_card_dyc_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/un_me_ph_dyn_like"
                android:drawablePadding="12dp"
                android:textSize="12sp"
                tools:text="3366"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_un_me_card_dyc_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/un_me_ph_dyn_msg"
                android:drawablePadding="12dp"
                android:textSize="12sp"
                tools:text="666"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_un_me_card_dyc_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/un_me_ph_dyn_share"
                android:drawablePadding="12dp"
                android:textSize="12sp"
                tools:text="66"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
