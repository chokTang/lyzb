<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_invoice_goods_goodsRecyclerView">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/goodsInfo"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontOne"
            />

        <ImageView
            android:id="@+id/fragment_invoice_goods_closeImageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/btn_close_circled"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_invoice_goods_goodsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/activity_region_background"
        android:backgroundTint="#fff"
        android:divider="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
