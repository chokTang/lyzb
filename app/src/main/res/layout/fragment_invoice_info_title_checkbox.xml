<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_invoice_info_checkbox_wrapperRelativelayout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingLeft="20dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    >


    <ImageView android:id="@+id/image_checkbox"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/image_checkbox_selector"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/fragment_invoice_info_checkbox_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholderTitle"
        android:textColor="@color/colorTwo"
        android:textSize="@dimen/fontThree"
        android:layout_toRightOf="@+id/image_checkbox"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>