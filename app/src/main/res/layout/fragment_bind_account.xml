<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTen">

    <me.zongren.pullablelayout.Main.PullableLayout
        android:id="@+id/fragment_bind_account_pullableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.szy.common.View.CommonRecyclerView
            android:id="@+id/fragment_bind_account_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/fragment_bind_account_add_account"
            app:emptyImage="@mipmap/bg_public"
            app:emptyTitle="@string/emptyData"/>
    </me.zongren.pullablelayout.Main.PullableLayout>

    <include
        layout="@layout/layout_bottom_button"/>
</RelativeLayout>