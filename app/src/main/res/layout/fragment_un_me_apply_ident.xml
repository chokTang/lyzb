<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_union_me_com_apply_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/btn_back_dark"/>

        <TextView
            android:id="@+id/tv_apply_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize16"
            tools:text="申请XXX入驻"/>

        <TextView
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#0089ea"
            android:textSize="@dimen/adaptive_18sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/union_me_menu"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/single_layout_height"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:gravity="center_vertical"
                    android:text="企业信息"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:background="@color/white_f5"/>

                <LinearLayout
                    android:id="@+id/lin_apply_com_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/single_layout_height"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="运营类型"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize14"/>

                    <TextView
                        android:id="@+id/tv_apply_com_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="省级运营伙伴 >"
                        android:textColor="@color/fontcColor2"
                        android:textSize="@dimen/textSize14"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:background="@color/white_f5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/single_layout_height"
                    android:layout_marginBottom="@dimen/app_margin"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:gravity="center_vertical"
                    android:text="营业执照"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/app_margin"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_apply_com_img"
                        android:layout_width="130dp"
                        android:layout_height="84dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/union_me_tp_lic"/>

                    <TextView
                        android:id="@+id/img_apply_example"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/adaptive_36dp"
                        android:drawablePadding="@dimen/app_margin"
                        android:drawableRight="@mipmap/union_me_tp_sam"
                        android:gravity="center"
                        android:text="示例"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/textSize12"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:background="@color/white_f5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/single_layout_height"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="企业名称"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize14"/>

                    <EditText
                        android:id="@+id/edt_apply_com_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入企业名称"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/app_margin"
                        android:textColor="@color/fontcColor2"
                        android:textSize="@dimen/textSize14"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:background="@color/white_f5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/single_layout_height"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="执照号"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize14"/>

                    <EditText
                        android:id="@+id/edt_apply_com_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入执照号"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/app_margin"
                        android:textColor="@color/fontcColor2"
                        android:textSize="@dimen/textSize14"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:background="@color/white_f5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/single_layout_height"
                    android:layout_marginBottom="@dimen/app_margin"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="注册地"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize14"/>

                    <TextView
                        android:id="@+id/tv_apply_com_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:hint="请选择注册地址"
                        android:textColor="@color/fontcColor2"
                        android:textSize="@dimen/textSize14"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/app_margin"
                android:background="@drawable/union_me_menu"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/single_layout_height"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:gravity="center_vertical"
                    android:text="联系人信息"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize16"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:background="@color/white_f5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/adaptive_48dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="姓名"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize14"/>

                    <EditText
                        android:id="@+id/edt_apply_com_the_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="请输入姓名"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/app_margin"
                        android:textColor="@color/fontcColor2"
                        android:textSize="@dimen/textSize14"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:background="@color/white_f5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/single_layout_height"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="手机号"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize14"/>

                    <EditText
                        android:id="@+id/edt_apply_com_the_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="请输入手机号码"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textColor="@color/fontcColor2"
                        android:textSize="@dimen/textSize14"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:background="@color/white_f5"/>

                <LinearLayout
                    android:id="@+id/lin_apply_com_the_ser_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/single_layout_height"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="推荐码"
                        android:textColor="@color/fontcColor1"
                        android:textSize="@dimen/textSize14"/>

                    <EditText
                        android:id="@+id/edt_apply_com_the_ser_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="请输入推荐码"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/app_margin"
                        android:textColor="@color/fontcColor2"
                        android:textSize="@dimen/textSize14"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/check_agr_ck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/sele_agr_check"
                        android:checked="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我已阅读并同意"
                        android:textColor="@color/fontcColor2"
                        android:textSize="@dimen/adaptive_12sp"/>

                    <TextView
                        android:id="@+id/tv_agr_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《共商联盟服务协议》"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/adaptive_12sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_apply_apply_text"
                    style="@style/common_bottom_btn_style"
                    android:text="提交入驻申请"/>

                <TextView
                    android:id="@+id/tv_apply_hint"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/adaptive_48dp"
                    android:background="@color/fontcColor1"
                    android:drawableLeft="@mipmap/union_card_war"
                    android:drawablePadding="@dimen/adaptive_6dp"
                    android:gravity="center|left"
                    android:lineSpacingExtra="@dimen/text_line_space"
                    android:paddingLeft="@dimen/adaptive_6dp"
                    android:paddingRight="@dimen/adaptive_6dp"
                    android:text="审核未通过:由于您的营业执照类型错误,所以审核未通过,请你重新确认正确的照片上传"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/adaptive_14sp"
                    android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
