<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_circle">

    <TextView
        android:id="@+id/dialog_cancel_order_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:text="@string/chooseCancleOrderReason"
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontTwo" />

    <ListView
        android:id="@+id/order_cancel_reason_list_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/dialog_cancel_order_textView"
        android:choiceMode="singleChoice"
        android:divider="@color/colorTen"
        android:dividerHeight="0.5dp"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorEight"
        android:layout_below="@+id/order_cancel_reason_list_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view">

        <TextView
            android:id="@+id/dialog_call_cancle_textView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/buttonCancel"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontTwo" />

        <TextView
            android:id="@+id/dialog_call_confirm_textView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fontTwo" />
    </LinearLayout>

</RelativeLayout>