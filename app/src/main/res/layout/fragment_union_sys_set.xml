<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/windows_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_union_me_set_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@mipmap/btn_back_dark"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="系统设置"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize16"/>

        <TextView
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:textColor="@color/fontcColor1"/>

    </LinearLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_margin"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_margin"
        app:divider="@drawable/linediver"
        app:showDividers="middle">

        <LinearLayout
            android:id="@+id/lin_union_me_set_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_layout_height"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="修改密码"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize14"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:src="@mipmap/union_me_go"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_union_me_set_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_layout_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="身份认证"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize14"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:src="@mipmap/union_me_go"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_union_me_set_we"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_layout_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="关于我们"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize14"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:src="@mipmap/union_me_go"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_privacy_set"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_layout_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="隐私设置"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize14"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="16dp"
                android:src="@mipmap/union_me_go"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_union_me_set_cache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_layout_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="清除缓存"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize14"/>

            <TextView
                android:id="@+id/tv_union_me_cache"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="3.12M"
                android:textColor="@color/fontcColor2"
                android:textSize="@dimen/textSize12"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_union_me_set_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_layout_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="当前版本"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize14"/>

            <TextView
                android:id="@+id/tv_union_me_version"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="3.9.6"
                android:textColor="@color/fontcColor2"
                android:textSize="@dimen/textSize12"/>

        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_set_login_out"
        style="@style/common_bottom_btn_style"
        android:text="退出登录"/>
</LinearLayout>
