<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/colorShopBase"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/fragment_checkout_shop_iconImageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_shop_seller"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"/>


    <TextView
        android:id="@+id/fragment_checkout_shop_nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:text="@string/placeholderShopName"
        android:textColor="@color/colorTwo"
        android:maxEms="12"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/fontThree" />


    <TextView
        android:id="@+id/textViewTableNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0111"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginLeft="4dp"
        android:textSize="@dimen/fontFour"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/red_border_button_one"/>


</LinearLayout>