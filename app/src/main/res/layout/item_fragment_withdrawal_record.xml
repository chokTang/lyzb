<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_bottom_border_one"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">


    <TextView
        android:id="@+id/item_fragment_money_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontTwo"
        android:text="1111"
        />

    <TextView
        android:id="@+id/item_fragment_status_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_fragment_money_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontThree"/>

    <TextView
        android:id="@+id/refuse_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拒绝理由"
        android:textSize="@dimen/fontThree"
        android:layout_below="@+id/item_fragment_money_text_view"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textColor="@color/colorThree"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/refuse_tip"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorEight"/>

    <TextView
        android:id="@+id/item_fragment_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_fragment_money_text_view"
        android:layout_alignStart="@+id/item_fragment_money_text_view"
        android:layout_below="@+id/view"
        android:lineSpacingExtra="8dp"
        android:text="zhifubao"
        android:textColor="@color/colorTwo"
        android:textSize="@dimen/fontThree"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_fragment_name_text_view"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorEight"/>

    <TextView
        android:id="@+id/item_fragment_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/item_fragment_money_text_view"
        android:layout_alignStart="@+id/item_fragment_money_text_view"
        android:layout_below="@+id/view1"
        android:gravity="center"
        android:textColor="@color/colorThree"
        android:textSize="@dimen/fontFive"
        />

    <TextView
        android:id="@+id/item_fragment_delete_text_view"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/item_fragment_time_text_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/gray_border_button_one"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="@color/colorOne"
        android:textSize="@dimen/fontFour"/>
</RelativeLayout>