<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_me_cir_detail_bg"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        tools:src="@mipmap/ic_launcher"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/app_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/app_margin"
                        android:paddingRight="@dimen/app_margin">

                        <ImageView
                            android:id="@+id/img_me_cir_detail_head"
                            android:layout_width="@dimen/member_headerImg_big"
                            android:layout_height="@dimen/member_headerImg_big"
                            android:background="@drawable/st_white_r5"
                            android:padding="2dp"
                            android:scaleType="fitXY"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/app_margin"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_me_cir_detail_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:lineSpacingExtra="@dimen/text_line_space"
                                    android:maxLines="2"
                                    android:textColor="#EDEDED"
                                    android:textSize="@dimen/textSize16"
                                    tools:text="小商品圈子ssssssssss"/>

                                <ImageView
                                    android:id="@+id/iv_me_cir_detail_iscompany"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:src="@mipmap/ic_company"
                                    android:visibility="gone"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_me_cir_detail_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/text_line_space"
                                android:textColor="#EDEDED"
                                android:textSize="@dimen/textSize12"
                                tools:text="成员6635  |    1.7万动态"/>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_me_cir_detail_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:src="@mipmap/un_me_circle_mag"/>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/double_layout_height"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/app_margin"
                    android:paddingRight="@dimen/app_margin">

                    <ImageView
                        android:id="@+id/img_me_cir_detail_own_head"
                        android:layout_width="@dimen/member_headerImg_small"
                        android:layout_height="@dimen/member_headerImg_small"
                        android:scaleType="fitXY"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_me_cir_detail_own_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/fontcColor1"
                            android:textSize="@dimen/textSize14"
                            tools:text="秀树满屋"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/text_icon_space"
                            android:text="圈主"
                            android:textColor="@color/app_blue"
                            android:textSize="@dimen/textSize12"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_me_cir_detail_one"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/img_me_cir_detail_two"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="-6dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/img_me_cir_detail_three"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="-6dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"/>

                    <FrameLayout
                        android:id="@+id/lin_me_cir_merber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/app_margin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/app_margin"
                            android:drawableRight="@mipmap/un_me_cr_go"
                            android:text="全部成员"
                            android:textColor="@color/fontcColor3"
                            android:textSize="@dimen/textSize12"/>

                        <TextView
                            android:id="@+id/tv_me_cir_detail_own_number"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center|right"
                            android:layout_marginBottom="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/red_round_hint"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="6sp"
                            tools:text="66"/>
                    </FrameLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineSize"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:background="@color/lineColor"/>

                <TextView
                    android:id="@+id/tv_me_cir_detail_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:layout_marginRight="@dimen/app_margin"
                    android:layout_marginTop="15dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="@dimen/text_line_space"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"
                    tools:text="这里是圈子的介绍这里是圈子的介绍这里是圈子的介绍这里是圈子的介绍这里是圈子的介绍这里是圈子的介绍这里是圈子的介绍这里是圈子的介绍"/>

                <TextView
                    android:id="@+id/tv_me_cir_detail_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/app_margin"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:text="展开"
                    android:textColor="@color/app_blue"
                    android:textSize="@dimen/textSize12"
                    android:visibility="gone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@android:color/white"/>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:background="@android:color/transparent"
                android:clickable="true"
                app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/windows_bg"/>

        <LinearLayout
            android:id="@+id/tab_circle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.like.longshaolib.widget.AutoWidthTabLayout
                android:id="@+id/tab_circle_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:tabIndicatorColor="@color/fontcColor3"
                app:tabIndicatorHeight="1dp"
                app:tabSelectTextColor="@color/fontcColor1"
                app:tabSelectTextSize="14"
                app:tabTextColor="@color/fontcColor3"
                app:tabTextSize="14"
                app:tab_Mode="mode_fixed"/>

            <ImageView
                android:id="@+id/iv_circle_settab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_margin"
                android:src="@mipmap/ic_circle_tab"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_circle_dynamic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/adaptive_48dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="@dimen/adaptive_66dp"
                android:layout_height="@dimen/lineSize"
                android:layout_marginRight="@dimen/adaptive_12dp"
                android:background="@color/lineColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="圈子动态"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize16"/>

            <View
                android:layout_width="@dimen/adaptive_66dp"
                android:layout_height="@dimen/lineSize"
                android:layout_marginLeft="@dimen/adaptive_12dp"
                android:background="@color/lineColor"/>

        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/layout_circle_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fl_add_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/app_blue"
        android:src="@drawable/union_add_white"
        app:borderWidth="0dp"
        app:fabSize="mini"/>

</android.support.design.widget.CoordinatorLayout>