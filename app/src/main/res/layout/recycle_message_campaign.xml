<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_message_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_message_time_bg"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:textColor="@color/aliwx_white"
        android:textSize="@dimen/textSize12"
        tools:text="2018年08月23日 09:53" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/app_margin"
        android:background="@drawable/rela_message_content_bg"
        android:orientation="vertical"
        android:padding="@dimen/app_margin">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize14"
            tools:text="标题" />

        <TextView
            android:id="@+id/tv_message_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="@dimen/text_line_space"
            android:textColor="@color/fontcColor2"
            android:textSize="@dimen/textSize12"
            tools:text="用户LDSWX25424,赠送你8元宝,请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收请查收" />

        <ImageView
            android:id="@+id/img_brackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxHeight="120dp"
            android:scaleType="fitXY"
            tools:background="@drawable/union_vip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="6dp"
            android:text="立即查看>>"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/textSize14" />
    </LinearLayout>
</LinearLayout>
