<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_groupon_list_noLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/item_groupon_list_sn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="111111"
            android:textColor="@color/colorTwo"
            android:textSize="@dimen/fontFive" />

        <TextView
            android:id="@+id/item_groupon_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态占位"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontFive" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorEight" />

    <RelativeLayout
        android:id="@+id/item_groupon_goodsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/item_groupon_goods_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/pl_image" />

        <TextView
            android:id="@+id/item_groupon_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_groupon_goods_imageView"
            android:layout_toRightOf="@+id/item_groupon_goods_imageView"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="商品名称"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontThree" />

        <TextView
            android:id="@+id/item_groupon_attr_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_groupon_goodsName"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/item_groupon_goods_imageView"
            android:layout_toRightOf="@+id/item_groupon_goods_imageView"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="商品属性"
            android:textColor="@color/colorThree"
            android:textSize="@dimen/fontFive" />

        <TextView
            android:id="@+id/item_groupon_money_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_groupon_goods_imageView"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/item_groupon_goods_imageView"
            android:layout_toRightOf="@+id/item_groupon_goods_imageView"
            android:text="￥100"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontSeven" />


        <TextView
            android:id="@+id/item_groupon_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_groupon_goods_imageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="1人已参团"
            android:textColor="@color/colorThree"
            android:textSize="@dimen/fontFive" />

        <TextView
            android:id="@+id/item_groupon_number_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_groupon_goods_imageView"
            android:layout_toEndOf="@+id/item_groupon_money_textView"
            android:layout_toRightOf="@+id/item_groupon_money_textView"
            android:gravity="center"
            android:text="/3人团"
            android:textColor="@color/colorThree"
            android:textSize="@dimen/fontFive"
            android:layout_marginBottom="2dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorEight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/item_groupon_order_detail_button"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/gray_border_button_one"
            android:gravity="center"
            android:text="@string/activityOrderDetail"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontFour" />

        <TextView
            android:id="@+id/item_groupon_detail_button"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/gray_border_button_one"
            android:gravity="center"
            android:text="@string/checkGroupOnDetail"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontFour" />


        <TextView
            android:id="@+id/item_groupon_detail_share"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/red_border_button_one"
            android:gravity="center"
            android:text="邀请好友拼团"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontFour"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorSeven" />

</LinearLayout>