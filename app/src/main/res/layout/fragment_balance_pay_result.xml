<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/white"
             tools:context="com.szy.yishopcustomer.Fragment.BalancePayResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/blue_background_circular"
            android:gravity="center"
            android:text="余"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textViewPayResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="支付成功"
            android:textColor="@color/colorTwo"
            android:textSize="@dimen/fontTwo" />

        <TextView
            android:id="@+id/textViewPayAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="￥0.00"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontOne" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="#e3e5e9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收款人"
                android:textColor="@color/colorThree"
                android:textSize="@dimen/fontTwo" />

            <TextView
                android:id="@+id/textViewShopName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/colorOne"
                android:textSize="@dimen/fontTwo" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
