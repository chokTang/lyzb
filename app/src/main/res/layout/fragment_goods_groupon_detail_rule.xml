<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorTen"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_goods_groupon_detail_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/top_bottom_border_one"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/fragment_order_detail_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/groupOnRules"
            android:textColor="@color/colorTwo"
            android:textSize="@dimen/fontThree"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_goods_groupon_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorEight"/>

    <include
        layout="@layout/layout_groupon_rules"
        />

</LinearLayout>