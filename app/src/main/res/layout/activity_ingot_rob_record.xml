<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_ingot_rob"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/toolbar_bottom_border"
        android:theme="@style/ToolbarTheme"
        app:navigationIcon="@mipmap/btn_back_dark">

        <TextView
            android:id="@+id/ingot_rob_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ingot_rob_record"
            android:textColor="@color/colorOne"
            android:textSize="18dp"/>

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tv_ingot_rob_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aliwx_white"
        android:padding="12dp"
        android:textColor="@color/colorOne"
        android:textSize="16dp"
        tools:text="已领取20/200个元宝,共200个元宝"/>

    <com.szy.common.View.CommonRecyclerView
        android:id="@+id/recy_ingot_rob_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="未领取元宝,将于24小时后退回"
        android:textColor="@color/ing_total_tx"
        android:textSize="14dp"/>


</LinearLayout>
