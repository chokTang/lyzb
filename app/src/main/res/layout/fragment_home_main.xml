<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.ContentFrameLayout
        android:id="@+id/home_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom" />


    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_home_first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_home_first"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="首页"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/tv_home_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_home_four"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="商城"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize12"
            android:visibility="invisible" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_home_second"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/selector_home_second"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="消息"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize12" />

            <TextView
                android:id="@+id/tv_message_unread"
                style="@style/common_message_noread"
                android:layout_gravity="right"
                android:layout_marginRight="14dp"
                android:visibility="visible" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_home_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_home_five"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="我的"
            android:textColor="@color/fontcColor1"
            android:textSize="@dimen/textSize12" />
    </LinearLayout>

    <include
        layout="@layout/line_layout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/layout_bottom" />

    <TextView
        android:id="@+id/tv_home_three"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:drawableTop="@drawable/home_three"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="发布"
        android:textColor="@color/fontcColor1"
        android:textSize="@dimen/textSize12" />
</RelativeLayout>