<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/fragment_index_item_background"
    >

    <TextView
        android:id="@+id/fragment_index_goods_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:gravity="start|center_vertical"
        android:text="@string/title"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontThree"
        />
    <TextView
        android:id="@+id/fragment_index_goods_ingot_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/fontThree"
        android:layout_toRightOf="@id/fragment_index_goods_title_textView"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/fragment_index_goods_title_moreTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/fragment_index_goods_title_moreImageView"
        android:layout_toStartOf="@+id/fragment_index_goods_title_moreImageView"
        android:gravity="start|center_vertical"
        android:text="@string/more"
        android:textColor="@color/colorThree"
        android:textSize="@dimen/fontThree"/>


    <ImageView
        android:id="@+id/fragment_index_goods_title_moreImageView"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/btn_right_arrow_circled"
        android:scaleType="fitCenter"
        />
</RelativeLayout>