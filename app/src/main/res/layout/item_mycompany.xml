<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/mycompany_item_top_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/windows_bg" />

    <LinearLayout
        android:id="@+id/mycompany_item_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/mycompany_item_head_iv"
            android:layout_width="@dimen/member_headerImg_big"
            android:layout_height="@dimen/member_headerImg_big"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mycompany_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/fontcColor1"
                android:textSize="@dimen/textSize16"
                tools:text="测试公司名字" />

            <TextView
                android:id="@+id/mycompany_item_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/fontcColor3"
                android:textSize="@dimen/textSize14"
                tools:text="测试测试测试测试测试测试测试测试" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/mycompany_item_notarrow_line"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:visibility="gone" />

    <View
        android:id="@+id/mycompany_item_arrow_line"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_marginLeft="40dp"
        android:background="@color/color_dedede" />
</LinearLayout>