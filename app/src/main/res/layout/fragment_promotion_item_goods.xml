<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewGoodNmae"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/gray_border_button_two"
            android:background="@drawable/gray_border_button_two"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewGoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorOne"
                android:textSize="@dimen/fontThree"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="商品名称"/>

            <LinearLayout
                android:id="@+id/linearlayout_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/gray_border_button_two"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewAttr"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#ff5000"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/fontFour"
                    android:text="选择商品规格"/>

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="4dp"
                    android:src="@mipmap/btn_down_arrow"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorThree"
                android:textSize="@dimen/fontFour"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:text="库存：222"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/item_border_one"/>

</LinearLayout>