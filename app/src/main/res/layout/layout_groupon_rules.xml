<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_bottom_border_two"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/groupon_rules_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/fragment_order_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="拼团玩法"
            android:textColor="@color/colorTwo"
            android:textSize="@dimen/fontThree" />

        <TextView
            android:id="@+id/fragment_user_groupon_detail_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="end|center_vertical"
            android:text="@string/viewDetailsFormat"
            android:textColor="@color/colorSix"
            android:textSize="@dimen/fontSix" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupon_rules_detailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="选择\n心仪商品"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontFive" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_next_red" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="支付开团\n或参团"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontFive" />

        <ImageView
            android:id="@+id/groupon_rules_image1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_next_red" />

        <TextView
            android:id="@+id/groupon_rules_result1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="等待好友\n参团支付"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontFive" />

        <ImageView
            android:id="@+id/groupon_rules_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_next_red" />

        <TextView
            android:id="@+id/groupon_rules_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时间超时\n拼团失败"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontFive" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorEight" />

</LinearLayout>
