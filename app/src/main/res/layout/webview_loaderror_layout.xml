<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragment_webview_loaderror_linea"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorTen"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="15dp"
        android:src="@mipmap/bg_public"/>

    <TextView
        android:id="@+id/fragment_webview_loaderror_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/webview_loaderror_text"
        android:textColor="@color/colorTwo"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/webview_reload_button"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/enable_button"
        android:text="@string/webview_reload_text"
        android:textColor="#fff"
        android:textSize="@dimen/fontThree"/>

</LinearLayout>
