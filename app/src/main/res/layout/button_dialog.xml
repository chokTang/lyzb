<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_ingot_expl_bg">

    <TextView
        android:id="@+id/tv_btn_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorOne"
        android:textSize="20dp"
        android:visibility="gone"
        tools:text="XXX弹出提示"/>

    <ImageView
        android:id="@+id/img_btn_dialog"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_below="@id/tv_btn_dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"/>


    <TextView
        android:id="@+id/tv_btn_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_btn_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:textColor="#F33030"
        android:textSize="18dp"
        tools:text="您砍掉了    1.53"/>

    <TextView
        android:id="@+id/tv_btn_dialog_ansure"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_btn_dialog_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/orange_border_tv"
        android:gravity="center"
        android:textColor="@color/btn_white_normal"
        android:textSize="18dp"
        tools:text="我知道了"/>


</RelativeLayout>
