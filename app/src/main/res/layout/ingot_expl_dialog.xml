<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_ingot_expl_bg">

    <TextView
        android:id="@+id/tv_ingot_expl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorOne"
        android:textSize="20dp"
        tools:text="元宝赠送说明"/>

    <com.szy.yishopcustomer.View.DashLineView
        android:id="@+id/view_ingot_expl_one"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_ingot_expl_title"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <TextView
        android:id="@+id/tv_ingot_expl_content_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_ingot_expl_one"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="36dp"
        android:text="@string/ingot_send"
        android:textSize="14dp"
        tools:text="1.赠送账号必须为平台已注册帐号;"/>

    <TextView
        android:id="@+id/tv_ingot_expl_content_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ingot_expl_content_one"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/ingot_send"
        android:textSize="14dp"
        tools:text="2.赠送元宝数量不能大于可赠送元宝数;"/>

    <TextView
        android:id="@+id/tv_ingot_expl_content_thr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ingot_expl_content_two"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/ingot_send"
        android:textSize="14dp"
        tools:text="3.赠送元宝使用规则:"/>

    <TextView
        android:id="@+id/tv_ingot_expl_content_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ingot_expl_content_thr"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/ingot_send"
        android:textSize="14dp"
        tools:text="3.1:元宝赠送后,获赠元宝有效期从获赠时起90天(含)内有效;"/>

    <TextView
        android:id="@+id/tv_ingot_expl_content_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ingot_expl_content_four"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="36dp"
        android:text="@string/ingot_send"
        android:textSize="14dp"
        tools:text="3.2:获赠元宝可再次赠送给他人。"/>


    <com.szy.yishopcustomer.View.DashLineView
        android:id="@+id/view_ingot_expl_two"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tv_ingot_expl_content_five"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <TextView
        android:id="@+id/tv_ingot_expl_ensure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_ingot_expl_two"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="知道了"
        android:textColor="@color/colorOne"
        android:textSize="20dp"/>

</RelativeLayout>
