<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/item_cart_goods_invalid_tip"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/invalid_goods_tag"
            android:gravity="center"
            android:text="失效"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fontSix"
            android:visibility="gone"
            />

       <ImageView
            android:id="@+id/image_checkbox"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/image_checkbox_selector" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/item_order_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/enable_button"
                    android:maxLines="1"
                    android:paddingBottom="1dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="1dp"
                    android:text="套餐"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontFive" />

                <TextView
                    android:id="@+id/item_cart_act_name_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:text="21e"
                    android:textColor="@color/colorOne"
                    android:textSize="@dimen/fontThree" />

                <ImageView
                    android:id="@+id/item_cart_goods_delete_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_delete_dark" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="45dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="41dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        >

        <TextView
            android:id="@+id/textViewSetPriceTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOne"
            android:textSize="@dimen/fontTwo"
            android:text="套餐价："/>

        <TextView
            android:id="@+id/item_cart_goods_price_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontOne"
            android:text="￥11.30"/>

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/layout_add_to_cart"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <include layout="@layout/item_border_one"
        android:visibility="gone"/>

</LinearLayout>
