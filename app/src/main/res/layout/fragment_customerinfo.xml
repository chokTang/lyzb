<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_statistics"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/line_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/app_margin">

                <include layout="@layout/layout_customer_head"/>

                <TextView
                    android:id="@+id/customerinfo_track_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_round_bg"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize12"
                    tools:text="跟进20次"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_layout_height"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/app_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注姓名"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <EditText
                    android:id="@+id/customerinfo_name_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请填写"
                    android:textColor="@color/fontcColor1"
                    android:textColorHint="@color/fontcColor3"
                    android:textSize="@dimen/textSize14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineSize"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/app_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="称呼"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/customerinfo_man_rbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:drawableLeft="@drawable/ic_customer_sex"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/app_margin"
                        android:text="先生"
                        android:textColor="@color/c_f1_f3"
                        android:textSize="@dimen/textSize14"/>

                    <RadioButton
                        android:id="@+id/customerinfo_female_rbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/ic_customer_sex"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/app_margin"
                        android:text="女士"
                        android:textColor="@color/c_f1_f3"
                        android:textSize="@dimen/textSize14"/>

                    <TextView
                        android:id="@+id/customerinfo_sex_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/app_margin"
                        android:textColor="@color/fontcColor1"
                        android:textColorHint="@color/fontcColor3"
                        android:textSize="@dimen/textSize14"
                        android:visibility="gone"/>
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/app_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <EditText
                    android:id="@+id/customerinfo_phone_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请填写"
                    android:textColor="@color/fontcColor1"
                    android:textColorHint="@color/fontcColor3"
                    android:textSize="@dimen/textSize14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineSize"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/app_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <EditText
                    android:id="@+id/customerinfo_wxnumber_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请填写"
                    android:textColor="@color/fontcColor1"
                    android:textColorHint="@color/fontcColor3"
                    android:textSize="@dimen/textSize14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/app_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <EditText
                    android:id="@+id/customerinfo_company_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请填写"
                    android:textColor="@color/fontcColor1"
                    android:textColorHint="@color/fontcColor3"
                    android:textSize="@dimen/textSize14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineSize"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/app_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职位"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <EditText
                    android:id="@+id/customerinfo_position_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请填写"
                    android:textColor="@color/fontcColor1"
                    android:textColorHint="@color/fontcColor3"
                    android:textSize="@dimen/textSize14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineSize"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/app_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地区"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <TextView
                    android:id="@+id/customerinfo_region_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="请选择"
                    android:textColor="@color/fontcColor1"
                    android:textColorHint="@color/fontcColor3"
                    android:textSize="@dimen/textSize14"/>

                <ImageView
                    android:id="@+id/customerinfo_region_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/app_margin"
                    android:src="@drawable/pub_right"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineSize"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/app_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <EditText
                    android:id="@+id/customerinfo_address_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请填写"
                    android:textColor="@color/fontcColor1"
                    android:textColorHint="@color/fontcColor3"
                    android:textSize="@dimen/textSize14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/app_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="毕业院校"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <EditText
                    android:id="@+id/customerinfo_school_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请填写"
                    android:textColor="@color/fontcColor1"
                    android:textColorHint="@color/fontcColor3"
                    android:textSize="@dimen/textSize14"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineSize"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/single_layout_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/app_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <TextView
                    android:id="@+id/customerinfo_birthday_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="请选择"
                    android:textColor="@color/fontcColor1"
                    android:textColorHint="@color/fontcColor3"
                    android:textSize="@dimen/textSize14"/>

                <ImageView
                    android:id="@+id/customerinfo_birthday_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/app_margin"
                    android:src="@drawable/pub_right"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/lineSize"
                android:layout_marginLeft="@dimen/app_margin"
                android:layout_marginRight="@dimen/app_margin"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/single_layout_height"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/app_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                    android:textColor="@color/fontcColor1"
                    android:textSize="@dimen/textSize14"/>

                <EditText
                    android:id="@+id/customerinfo_remark_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="填写更多备注信息"
                    android:padding="@dimen/app_margin"
                    android:textColor="@color/fontcColor1"
                    android:textColorHint="@color/fontcColor3"
                    android:textSize="@dimen/textSize14"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/customerinfo_keep_tv"
        style="@style/common_bottom_btn_style"
        android:layout_marginTop="10dp"
        android:text="保存"/>

</LinearLayout>